#include <Windows.h>
#include <iostream>
using namespace std; 
int main() {
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	double A = 20.102;
	double* ptr = &A;

	cout << "Без дії" << endl;
	cout << *ptr << " ";
	cout << endl;

	cout << " Дія  додали 35" << endl;
	cout << *ptr + 35.000 << endl;

}
